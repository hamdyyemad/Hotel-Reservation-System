{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch HotelBooking.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/HotelBooking.API/bin/Debug/net9.0/HotelBooking.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HotelBooking.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
        {
            "name": "Launch HotelBooking.API (No Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/HotelBooking.API/bin/Debug/net9.0/HotelBooking.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/HotelBooking.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "noDebug": true
        },
        {
            "name": "Attach to .NET Process",
            "type": "coreclr",
            "request": "attach"
        }
    ]
} 